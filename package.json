{
  "name": "npm-scripts-build",
  "version": "1.0.1",
  "description": "",
  "main": "index.js",
  "config": {
    "components_folder": "components",
    "css_folder": "css",
    "js_folder": "js"
  },
  "scripts": {
    "components:scss": "cross-var bash -c \"[ -d '$npm_package_config_components_folder' ] && cat $npm_package_config_components_folder/**/*.scss > $npm_package_config_components_folder/components.scss || (mkdir -p $npm_package_config_components_folder && touch $npm_package_config_components_folder/components.scss)\"",
    "components:js": "cross-var bash -c \"[ -d '$npm_package_config_components_folder' ] && cat $npm_package_config_components_folder/**/*.js > $npm_package_config_components_folder/components.js || (mkdir -p $npm_package_config_components_folder && touch $npm_package_config_components_folder/components.js)\"",
    "sass:components": "cross-var bash -c \"node-sass $npm_package_config_components_folder/components.scss $npm_package_config_components_folder/components.css\"",
    "sass:style": "cross-var bash -c \"node-sass $npm_package_config_css_folder/style.scss $npm_package_config_css_folder/style.css\"",
    "sass": "concurrently \"npm:sass:components\" \"npm:sass:style\"",
    "csscat": "cross-var bash -c \"cat $npm_package_config_components_folder/components.css $npm_package_config_css_folder/style.css > dist/style.css\"",
    "cssmin": "cleancss -o dist/style.min.css dist/style.css",
    "jscat": "cross-var bash -c \"rollup $npm_package_config_js_folder/*.js --dir temp/rollup --format cjs --no-strict && cat temp/rollup/*.js > temp/rollup.js && cat $npm_package_config_components_folder/components.js temp/rollup.js > dist/script.js\"",
    "jsmin:dev": "terser dist/script.js -o dist/script.min.js -m",
    "jsmin:prod": "terser dist/script.js -o dist/script.min.js -m -c",
    "babel": "babel --minified --compact true dist/script.js -o temp/babel.js && cat ./node_modules/@babel/polyfill/dist/polyfill.min.js temp/babel.js > dist/script.babel.js",
    "beforebuild": "rm -rf temp && mkdir temp",
    "css": "run-s components:scss sass csscat cssmin",
    "js:dev": "run-s components:js jscat jsmin:dev",
    "js:prod": "run-s components:js jscat jsmin:prod babel",
    "build": "npm run build:dev",
    "build:css": "npm run css",
    "build:dev": "npm run beforebuild && concurrently \"npm:css\" \"npm:js:dev\" && npm run afterbuild",
    "build:prod": "npm run beforebuild && concurrently \"npm:css\" \"npm:js:prod\" && npm run afterbuild",
    "afterbuild": "rm -rf temp",
    "watch": "cross-var bash -c \"onchange '$npm_package_config_css_folder/**/*.scss' '$npm_package_config_components_folder/**/*.scss' '$npm_package_config_js_folder/*.js' '$npm_package_config_js_folder/**/*.js' -e '$npm_package_config_components_folder/*.*' -- npm run build:dev\"",
    "watch:components:css": "cross-var bash -c \"onchange '$npm_package_config_components_folder/**/*.scss' -e '$npm_package_config_components_folder/*.*' -- 'npm run css:dev'\"",
    "watch:components:js": "cross-var bash -c \"onchange '$npm_package_config_components_folder/**/*.js' -e '$npm_package_config_components_folder/*.*' -- 'npm run js:dev'\"",
    "watch:css": "cross-var bash -c \"onchange '$npm_package_config_css_folder/**/*.scss' -- run-s sass:style csscat\"",
    "watch:js": "cross-var bash -c \"onchange '$npm_package_config_js_folder/**/*.js' -- run-s jscat jsmin:dev\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/polyfill": "^7.4.4",
    "babel-cli": "^6.26.0",
    "clean-css-cli": "^4.3.0",
    "concurrently": "^4.1.1",
    "cross-var": "^1.1.0",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.0.0",
    "rollup": "^1.16.2",
    "terser": "^4.8.1"
  },
  "dependencies": {}
}
